# Etapa 1: Build
FROM mcr.microsoft.com/dotnet/sdk:7.0 AS build
WORKDIR /app

# Copiar el proyecto csproj y restaurar dependencias
COPY Concesionario/Concesionario.csproj ./Concesionario.csproj
RUN dotnet restore ./Concesionario.csproj

# Copiar todo el código
COPY Concesionario/. ./Concesionario/
RUN dotnet publish ./Concesionario/Concesionario.csproj -c Release -o /app/publish

# Etapa 2: Runtime
FROM mcr.microsoft.com/dotnet/aspnet:7.0 AS runtime
WORKDIR /app
COPY --from=build /app/publish .

# Puerto que usará Render
ENV DOTNET_URLS=http://*:${PORT}
EXPOSE 5000

# Cambiar al nombre real de tu DLL
ENTRYPOINT ["dotnet", "Concesionario.dll"]

